<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPaneAddProduct" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.AddProductController">
   <children>
      <Label layoutX="300.0" layoutY="71.0" text="Add Product">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <TextField fx:id="titleField" layoutX="130.0" layoutY="139.0" prefHeight="42.0" prefWidth="542.0" promptText="title" />
      <TextArea fx:id="descriptionArea" layoutX="130.0" layoutY="190.0" prefHeight="169.0" prefWidth="230.0" promptText="description" />
      <TextField fx:id="stockField" layoutX="261.0" layoutY="364.0" prefHeight="26.0" prefWidth="78.0" promptText="1" text="1" />
      <TextField fx:id="priceField" layoutX="261.0" layoutY="397.0" prefHeight="26.0" prefWidth="78.0" promptText="0" text="0" />
      <Button fx:id="addButton" layoutX="361.0" layoutY="441.0" mnemonicParsing="false" onAction="#addProduct" prefHeight="26.0" prefWidth="77.0" text="Add">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Label layoutX="154.0" layoutY="365.0" text="stock (kg):">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label layoutX="154.0" layoutY="398.0" text="price/kg (EUR):">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Button fx:id="chooseImage" layoutX="500.0" layoutY="398.0" mnemonicParsing="false" onAction="#setImage" text="Choose Image" />
      <ImageView fx:id="imageView" fitHeight="201.0" fitWidth="230.0" layoutX="439.0" layoutY="190.0" pickOnBounds="true" preserveRatio="true" />
      <Button layoutX="31.0" layoutY="36.0" mnemonicParsing="false" onAction="#menuHyperlinkClicked" text="Back to Menu" />
   </children>
</AnchorPane>
